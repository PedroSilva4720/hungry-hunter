{
  "compilerOptions": {
    "outDir": "dist/js",
    "rootDir": "./src",
    "target": "ES2021",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["src/controllers/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@repo/*": ["src/repositories/*"],
      "@errors/*": ["src/errors/*"],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["src/models/*"],
      "@utils/*": ["src/utils/*"],
      "@t/*": ["src/types/*"],
      "@@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
